{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/index.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/test",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "src/main.tsx",
    "src/lib/data-model-loader.ts",
    "src/lib/design-system-loader.ts",
    "src/lib/product-loader.ts",
    "src/lib/section-loader.ts",
    "src/lib/shell-loader.ts",
    "src/lib/router.tsx"
  ]
}
